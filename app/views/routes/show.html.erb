<div class="small-12  stop_img_wrapper">
<p id="notice"><%= notice %></p>



<ul id="stops-carousel" data-orbit>
  <% @route.stops.each do |stop| %>
  <li>
    <img src="<%= stop.stop_image_url(:thumb_300) %>" alt="<%= stop.name %>" />
    <div class="orbit-caption">
		<%= stop.name %>
  <%= link_to 'Delete Stop', stop, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </li>
  <% end %>
</ul>

		<%-# comment -%>
