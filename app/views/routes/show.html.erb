			<p> 
				Category: 
				<% stops.categories.each do |category| %>
					<%= category.name %>
				<% end %>
			</p>
			<p> Stop ID: <%= stops.id %>  </p>
			<p> Stop name :<%= stops.name %>  </p>
			<p> Stop description :<%= stops.description %> </p>
			<p> Stop lat :<%= stops.stop_lat %>  </p>
			<p> Stop long:<%= stops.stop_long %>  </p>
		<% end %>
